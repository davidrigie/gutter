{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "gutter",
  "version": "0.3.5",
  "identifier": "com.gutter.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1421",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Gutter",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: http://asset.localhost https://asset.localhost blob: data:; font-src 'self' data:; connect-src ipc: http://ipc.localhost https://ipc.localhost; child-src 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    },
    "fileAssociations": [
      {
        "ext": ["md"],
        "name": "Markdown",
        "mimeType": "text/markdown",
        "rank": "Default"
      },
      {
        "ext": ["markdown"],
        "name": "Markdown",
        "mimeType": "text/markdown",
        "rank": "Alternate"
      }
    ]
  }
}
